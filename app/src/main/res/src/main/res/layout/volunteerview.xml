<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/wrapper"
    android:background="#cbddd1"
    android:orientation="horizontal"
    android:layout_height="match_parent"
    tools:context=".VolunteerView">


    <TextView
        android:id="@+id/txtHeading1"
        android:layout_width="193dp"
        android:layout_height="53dp"
        android:layout_marginBottom="17dp"
        android:fontFamily="@font/bungee"
        android:text="Welcome Back!"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/viewPage"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txtHeading"
        android:layout_width="203dp"
        android:layout_height="45dp"
        android:layout_below="@+id/txtHeading1"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="1dp"
        android:fontFamily="@font/bungee"
        android:text="Volunteer Name!"
        android:textColor="@color/red"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/viewPage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtHeading1"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tablayout"
        android:layout_width="412dp"
        android:layout_height="74dp"
        android:background="@color/gray"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:tabIndicatorColor="@color/white"
        app:tabSelectedTextColor="@color/white"
        app:tabTextColor="#292a2d"
        tools:ignore="MissingConstraints" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPage"
        android:layout_width="403dp"
        android:layout_height="587dp"
        android:layout_marginTop="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtHeading"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>