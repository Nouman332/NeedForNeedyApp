<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".VolunteerSignUp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical">

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:src="@drawable/login" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bungee"
            android:layout_marginTop="0dp"
            android:text="@string/become_volunteers"
            android:textSize="26sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp"
            android:fontFamily="@font/bungee"
            android:text="@string/the_best_way_to_find_yourself_is_to_lose_yourself_in_the_service_of_others"

            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/marko_one"
            android:text="@string/sign_up_now"
            android:layout_marginTop="10dp"
            android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="2dp"
        >


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/firstName"
            app:boxStrokeColor="@color/gray"
            app:hintTextColor="@color/puce"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="@string/full_name"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:drawableLeft="@drawable/ic_baseline_person_24"
                android:drawablePadding="10dp"/>

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/user"
            app:boxStrokeColor="@color/gray"
            app:hintTextColor="@color/puce"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="@string/username"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:drawableLeft="@drawable/ic_baseline_person_24"
                android:drawablePadding="10dp"/>

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/email"
            app:boxStrokeColor="@color/gray"
            app:hintTextColor="@color/puce"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="@string/email"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:drawableLeft="@drawable/ic_baseline_email_24"
                android:drawablePadding="10dp"/>

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/phone"
            app:boxStrokeColor="@color/gray"
            app:hintTextColor="@color/puce"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="@string/phone_no"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:drawableLeft="@drawable/ic_baseline_phone_iphone_24"
                android:drawablePadding="10dp"/>

        </com.google.android.material.textfield.TextInputLayout>




        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/password"
            app:boxStrokeColor="@color/gray"
            app:hintTextColor="@color/puce"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="@string/password"
            app:passwordToggleEnabled="true"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"/>

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Confirmpassword"
            app:boxStrokeColor="@color/gray"
            app:hintTextColor="@color/puce"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="@string/confirm_password"
            app:passwordToggleEnabled="true"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"/>

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/marko_one"
            android:text="What days of the week work  best for your schedule"
            android:textColor="@color/gray"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/chkMonday"
            android:layout_width="393dp"
            android:layout_height="37dp"
            android:fontFamily="@font/marko_one"
            android:text="Monday"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/chkTuesday"
            android:layout_width="389dp"
            android:layout_height="37dp"
            android:fontFamily="@font/marko_one"
            android:text="Tuesday"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/chkWednesday"
            android:layout_width="393dp"
            android:layout_height="38dp"
            android:fontFamily="@font/marko_one"
            android:text="Wednesday"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/chkThursday"
            android:layout_width="389dp"
            android:layout_height="36dp"
            android:fontFamily="@font/marko_one"
            android:text="Thursday"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/chkFriday"
            android:layout_width="393dp"
            android:layout_height="37dp"
            android:fontFamily="@font/marko_one"
            android:text="Friday"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/chkSaturday"
            android:layout_width="395dp"
            android:layout_height="37dp"
            android:fontFamily="@font/marko_one"
            android:text="Saturday"
            android:textSize="14sp" />


        <CheckBox
            android:id="@+id/chkSunday"
            android:layout_width="395dp"
            android:layout_height="37dp"
            android:fontFamily="@font/marko_one"
            android:text="Sunday"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txtCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/marko_one"
            android:text="Enter Your City"
            android:textColor="@color/gray"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="273dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="30dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSubmit"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_background"
            android:fontFamily="@font/marko_one"
            android:text="OFFLINE SINGUP"
            android:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnonlineSubmit"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_background"
            android:fontFamily="@font/marko_one"
            android:text="ONLINE SINGUP"
            android:textColor="@color/white" />



        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnSignIn"
            android:backgroundTint="@color/white"
            android:text="@string/already_have_an_account_sign_in"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/marko_one"
            android:background="@drawable/btn_background"
            android:textColor="@color/black"
            />

    </LinearLayout>


</ScrollView>