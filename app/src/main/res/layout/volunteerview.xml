<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".VolunteerView">


    <TextView
        android:id="@+id/txtHeading1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Welcome Back!"
        android:textColor="@color/puce"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/txtHeading1"
        android:padding="10dp"
        android:text="Volunteer Name!"
        android:textColor="@color/puce"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtLogOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:layout_toEndOf="@+id/txtHeading"
        android:layout_toRightOf="@+id/txtHeading1"
        android:padding="10dp"
        android:text="Log Out"
        android:textColor="@color/puce"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/notification"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/txtHeading"
        android:layout_centerInParent="true"
        android:layout_marginTop="100dp"
        android:backgroundTint="@color/white"
        android:src="@drawable/ic_baseline_notification_important_24"
        android:tag="hello" />


</RelativeLayout>