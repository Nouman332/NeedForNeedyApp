<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ScholarshipActivity1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Apply For Scholarship"
        android:textSize="20sp"
        android:background="@color/blue"
        android:padding="20dp"
        android:textColor="@color/white"
        android:fontFamily="@font/bungee"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Instructions"
        android:textColor="@color/puce"
        android:padding="10dp"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="> Candidate must have scored at least 80% marks in Matric or Inter Exams 2021"
        android:textColor="@color/puce"
        android:padding="10dp"
        android:textSize="16sp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="> The candidate must not be receiving any scholarship/stipend from any other source."
        android:textColor="@color/puce"
        android:padding="10dp"
        android:textSize="16sp"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="> Students can get an opportunity for their future education and scholarship will help them to continue or start their studies."
        android:textColor="@color/puce"
        android:padding="10dp"
        android:textSize="16sp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnApply"
        android:textSize="20sp"
        android:text="Apply Now!"
        android:background="@drawable/btn_background"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        />



</LinearLayout>