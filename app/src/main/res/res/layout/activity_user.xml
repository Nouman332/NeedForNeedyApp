<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    tools:context=".UserActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

<!--                <TextView-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="Together we make a big change!"-->
<!--                    android:textSize="20sp"-->
<!--                    android:layout_marginTop="20dp"-->
<!--                    android:layout_marginLeft="20dp"-->
<!--                    android:textColor="@color/puce"-->
<!--                    android:fontFamily="@font/bungee"-->
<!--                    />-->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/userBox"
                    >


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/btn_background">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/bungee"
                                    android:padding="20dp"
                                    android:text="@string/user"
                                    android:textSize="20sp" />

                        </RelativeLayout>

                        <pl.droidsonroids.gif.GifImageView
                            android:layout_width="170dp"
                            android:layout_height="150dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="-30dp"
                            android:src="@drawable/user" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:id="@+id/volunteerBox"
                    android:layout_marginTop="-40dp"
                    >


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/round_bk3">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="100dp"
                                    android:fontFamily="@font/bungee"
                                    android:padding="20dp"
                                    android:text="@string/volunteer"
                                    android:textSize="20sp" />

                        </RelativeLayout>

                        <pl.droidsonroids.gif.GifImageView
                            android:layout_width="140dp"
                            android:layout_height="150dp"
                            android:layout_alignParentLeft="true"
                            android:layout_marginTop="-25dp"
                            android:src="@drawable/volunteet" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:id="@+id/adminBox"
                    android:layout_marginTop="-40dp"
                    >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_margin="20dp"
                            android:background="@drawable/btn_background2">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/bungee"
                                    android:padding="20dp"
                                    android:text="@string/admin"
                                    android:textSize="24sp" />

                        </RelativeLayout>

                        <pl.droidsonroids.gif.GifImageView
                            android:layout_width="170dp"
                            android:layout_height="150dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="-30dp"
                            android:src="@drawable/admint" />
                </RelativeLayout>


        </LinearLayout>

</ScrollView>